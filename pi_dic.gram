#JSGF V1.0;
grammar PI;
public <cmd> = <name> <action>;
<name> = ( макс );
<action> = [ <act1> | <act2> | <act3> | <act4> | <act5> ];
<act1> = <on/off> ( <light> | <music> );
<on/off> = ( включи | выключи );
<light> = [ основной | дополнительный ] ( свет );
<music> = ( аудио | музыку | звук );
<act2> = ( поставь | убери ) ( на паузу );
<act3> = ( следующий | предыдущий ) ( трек );
<act4> = ( убавь | прибавь ) ( громкость | звук );
<act5> = ( смени голос );


